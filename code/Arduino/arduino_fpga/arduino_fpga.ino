void loop() {
  int estado = digitalRead(PIN_FPGA);

  // Imprimir el valor del pin en el monitor serial
  if (estado == HIGH) {
    STATE = STATE + 1;
  }
  leer_oled(STATE);

  delay(100);
}
/*Se declara la función leer_oled la cual define el tamaño, color, texto y la posición del texto 
que se mostrara en el display oled*/
void leer_oled(int figure) { 
  display.clearDisplay(); //Borra el buffer
  switch(figure){
    case 0:
      display.drawBitmap(0, 0, line_heart, 128, 32, 1);
    case 1:
      display.drawBitmap(0, 0, code, 128, 32, 1);
    case 2:
      display.drawBitmap(0, 0, robot, 128, 32, 1);
    case 3:
      display.drawBitmap(0, 0, solid_heart, 128, 32, 1);
  }
  display.display();
  delay(1500);
}